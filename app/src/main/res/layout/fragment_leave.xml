<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.LeaveFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="45px"
            android:tag="45"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Entity Leave" />

        <LinearLayout
            android:layout_marginTop="25px"
            android:background="@color/colorPrimary"

            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_below="@+id/filter"

            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:weightSum="3"


            >

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Casual"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
            />

            <TextView
                android:visibility="visible"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:gravity="center|center_vertical"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:text="Sick"
                android:textColor="@color/white"
                android:textSize="35px"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Total"
                android:gravity="center|center_vertical"
                android:layout_weight="1"

                android:background="@drawable/cell_shape"
             />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0px"


            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_below="@+id/filter"

            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/layout_header"

            >

            <TextView
                android:textStyle="bold"
                android:textColor="#6A6B6B"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="12"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:id="@+id/text_customer_name" />

            <TextView
                android:visibility="visible"
                android:id="@+id/text_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:gravity="center|center_vertical"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:text="12"
                android:textColor="#6A6B6B"
                android:textSize="35px"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:textColor="#6A6B6B"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="24"
                android:gravity="center|center_vertical"
                android:layout_weight="1"

                android:background="@drawable/cell_shape"
                android:id="@+id/text_amounst" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="50px"

            android:id="@+id/card_view"
            android:layout_width="match_parent"

            android:layout_height="match_parent"


            android:layout_marginLeft="20px"

            android:layout_marginRight="20px"

            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <EditText



                android:drawablePadding="25px"
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@null"
                android:inputType="text|textNoSuggestions"
                android:drawableLeft="@drawable/icon_search"
                android:hint="Please enter a search word"
                android:paddingLeft="40px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:textColorHint="#4D6A6B6B" />


        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="0px"
            tools:listitem="@layout/item_leave_summary_list"


            android:layout_below="@+id/layout_header"
            android:nestedScrollingEnabled="false"
            android:id="@+id/rcl_leave_summary_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="10px"

            android:layout_marginRight="10px"
            android:layout_marginBottom="0px"


            >

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rlt_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
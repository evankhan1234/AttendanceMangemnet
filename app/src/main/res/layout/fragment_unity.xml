<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlt_root"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:paddingBottom="10px">


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/text_name"
            android:layout_marginLeft="20px"
            android:tag="35"
            android:textSize="35px"
            android:text="MD. Sarawer Jahan Evan "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_marginTop="5px"
            android:layout_marginLeft="20px"
            android:id="@+id/indicator_0s1"
            android:layout_width="8dp"
            android:layout_height="8dp"


            android:background="@drawable/indicator_unselected" />
        <TextView
            android:id="@+id/text_unit"
            android:layout_marginLeft="20px"
            android:tag="35"
            android:textSize="35px"
            android:text="DCO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lineas"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0px"
            android:layout_marginTop="100px"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="5px"
                android:layout_marginLeft="20px"
                android:id="@+id/indicator_01"
                android:layout_width="8dp"
                android:layout_height="8dp"

                android:background="@drawable/indicator_unselected" />
            <TextView
                android:layout_marginLeft="20px"
                android:id="@+id/text_designation"
                android:tag="35"
                android:textSize="35px"

                android:text="Executive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="5px"
                android:layout_marginLeft="20px"
                android:id="@+id/indicator_0sz1s"
                android:layout_width="8dp"
                android:layout_height="8dp"


                android:background="@drawable/indicator_unselected" />
            <TextView
                android:layout_marginLeft="20px"
                android:id="@+id/text_department"
                android:tag="35"
                android:textSize="35px"

                android:text="Buisness Development "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="5px"
                android:layout_marginLeft="20px"
                android:id="@+id/indicator_0s1s"
                android:layout_width="8dp"
                android:layout_height="8dp"


                android:background="@drawable/indicator_unselected" />
            <TextView
                android:id="@+id/text_office_text"
                android:layout_marginLeft="20px"
                android:tag="35"
                android:textSize="35px"
                android:text="(1166)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lineas"
            android:layout_marginTop="40px"

            android:id="@+id/filter"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_start_date"
                android:focusable="false"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="15px"
                android:paddingLeft="20px"
                android:hint="Start Date"
                android:layout_marginLeft="30px"
                android:background="@drawable/border"

                android:layout_width="390px"
                android:layout_height="100px"/>
            <EditText
                android:id="@+id/edit_end_date"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="15px"
                android:paddingLeft="20px"
                android:hint="End Date"
                android:layout_marginLeft="40px"
                android:background="@drawable/border"
                android:focusable="false"
                android:layout_width="390px"
                android:layout_height="100px"/>
            <Button

                android:layout_marginLeft="20px"
                android:tag="45"
                android:textSize="45px"

                android:id="@+id/btn_yes"
                android:background="@drawable/btn_more_background"
                android:layout_marginRight="40px"
                android:hint="Show"
                android:textColorHint="#fff"
                android:layout_width="200px"
                android:layout_height="100px" />
        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="25px"
            android:background="@color/colorPrimary"

            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_below="@+id/filter"

            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:weightSum="5"
            android:id="@+id/layout_header"

            >

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Dates"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:id="@+id/text_customer_name" />

            <TextView
                android:visibility="gone"
                android:id="@+id/text_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:gravity="center|center_vertical"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:text="Punch In "
                android:textColor="@color/white"
                android:textSize="35px"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Punch In"
                android:gravity="center|center_vertical"
                android:layout_weight="1"

                android:background="@drawable/cell_shape"
                android:id="@+id/text_amounst" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Punch Out"
                android:gravity="center|center_vertical"
                android:layout_weight="1"

                android:background="@drawable/cell_shape"
                android:id="@+id/text_amount" />


            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Duration"
                android:gravity="center|center_vertical"
                android:layout_weight="1"

                android:background="@drawable/cell_shape"
                android:id="@+id/text_amounsvt" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:tag="35"
                android:textSize="35px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Location"
                android:gravity="center|center_vertical"
                android:layout_weight="1"

                android:background="@drawable/cell_shape"
                android:id="@+id/text_amouvnt" />
        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/item_punch_in_list"


                android:layout_below="@+id/layout_header"
                android:nestedScrollingEnabled="false"
                android:id="@+id/rcl_punch_in_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="10px"

                android:layout_marginRight="10px"
                android:layout_marginBottom="0px"


                >

            </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>
</ScrollView>
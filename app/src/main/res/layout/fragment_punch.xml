<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout

            android:id="@+id/main_root"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">








            <ScrollView


                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/linear"
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- TODO: Update blank fragment layout -->



                        <TextView
                            android:layout_marginTop="80px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Work Station"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Spinner

                            android:background="@drawable/test"
                            android:layout_marginTop="20px"
                            android:layout_marginLeft="60px"
                            android:layout_marginRight="50px"
                            android:id="@+id/spinner_unit"
                            android:layout_width="match_parent"
                            android:layout_height="160px"/>
                        <TextView
                            android:layout_marginTop="80px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>




                        <EditText


                            android:layout_marginLeft="60px"
                            android:layout_marginRight="50px"
                            android:layout_marginTop="20px"
                            android:gravity="top"

                            android:drawablePadding="25px"
                            android:id="@+id/edit_comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="280px"
                            android:background="@drawable/edit_border_background"
                            android:inputType="text|textMultiLine"
                            android:textColor="#6A6B6B"

                            android:hint="Please Take a Comment"
                            android:paddingLeft="40px"
                            android:paddingTop="20px"
                            android:paddingBottom="20px"
                            android:textColorHint="#4D6A6B6B" />



                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btn_punch_in"
                                android:layout_weight="1"
                                android:textColorHint="@color/white"
                                android:layout_marginBottom="30px"
                                android:layout_marginLeft="70px"

                                android:layout_marginTop="30px"

                                android:hint="Punch In"
                                android:background="@drawable/capsule_button"
                                android:layout_width="match_parent"
                                android:layout_height="150px"/>
                            <Button
                                android:focusable="false"
                                android:alpha="0.5"
                                android:id="@+id/btn_punch_out"
                                android:layout_weight="1"
                                android:textColorHint="@color/white"
                                android:layout_marginBottom="30px"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="70px"
                                android:layout_marginTop="30px"
                                android:hint="Punch Out"
                                android:background="@drawable/capsule_button"
                                android:layout_width="match_parent"
                                android:layout_height="150px"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_enter_time"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="70px"
                            android:tag="40"
                            android:textSize="40px"
                            android:textColor="#6A6B6B"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/text_unit"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="70px"
                            android:tag="40"
                            android:textSize="40px"
                            android:textColor="#6A6B6B"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/text_duration"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="70px"
                            android:tag="40"
                            android:textSize="40px"
                            android:textColor="#6A6B6B"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/text_in_comment"
                            android:layout_marginTop="50px"
                            android:layout_marginLeft="70px"
                            android:tag="40"
                            android:textSize="40px"
                            android:textColor="#6A6B6B"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/text_out_comment"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="70px"
                            android:tag="40"
                            android:textSize="40px"
                            android:textColor="#6A6B6B"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>




                </RelativeLayout>

            </ScrollView>


            <RelativeLayout
                android:id="@+id/rlt_detail_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </ScrollView>

</LinearLayout>

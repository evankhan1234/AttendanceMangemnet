                            android:layout_height="match_parent"


                            android:layout_marginLeft="70px"

                            android:layout_marginRight="70px"

                            card_view:cardBackgroundColor="#FFFFFF"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="4dp"
                            card_view:cardUseCompatPadding="true">

                            <EditText



                                android:focusable="false"
                                android:drawablePadding="25px"
                                android:id="@+id/edit_dob"
                                android:layout_width="match_parent"
                                android:layout_height="160px"
                                android:background="@null"
                                android:inputType="text|textNoSuggestions"
                                android:textColor="#6A6B6B"

                                android:text="02, January, 2019"
                                android:paddingLeft="40px"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:textColorHint="#4D6A6B6B" />


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="0px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="20px"
                            android:id="@+id/card_viewaas"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"


                            android:layout_marginLeft="70px"

                            android:layout_marginRight="70px"

                            card_view:cardBackgroundColor="#FFFFFF"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="4dp"
                            card_view:cardUseCompatPadding="true">

                            <EditText



                                android:focusable="false"
                                android:drawablePadding="25px"
                                android:id="@+id/edit_email"
                                android:layout_width="match_parent"
                                android:layout_height="160px"
                                android:background="@null"
                                android:inputType="text|textNoSuggestions"
                                android:textColor="#6A6B6B"

                                android:text="evankhan1234@gmail.com"
                                android:paddingLeft="40px"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:textColorHint="#4D6A6B6B" />


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="0px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="20px"
                            android:id="@+id/card_viexws"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"


                            android:layout_marginLeft="70px"

                            android:layout_marginRight="70px"

                            card_view:cardBackgroundColor="#FFFFFF"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="4dp"
                            card_view:cardUseCompatPadding="true">

                            <EditText



                                android:focusable="false"
                                android:drawablePadding="25px"
                                android:id="@+id/edit_phone"
                                android:layout_width="match_parent"
                                android:layout_height="160px"
                                android:background="@null"
                                android:inputType="text|textNoSuggestions"
                                android:textColor="#6A6B6B"

                                android:text="+8801677182084"
                                android:paddingLeft="40px"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:textColorHint="#4D6A6B6B" />


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="0px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="20px"
                            android:id="@+id/card_sviews"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"


                            android:layout_marginLeft="70px"

                            android:layout_marginRight="70px"

                            card_view:cardBackgroundColor="#FFFFFF"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="4dp"
                            card_view:cardUseCompatPadding="true">

                            <EditText



                                android:focusable="false"
                                android:drawablePadding="25px"
                                android:id="@+id/edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="160px"
                                android:background="@null"
                                android:inputType="text|textNoSuggestions"
                                android:textColor="#6A6B6B"

                                android:text="Merul Badda, Dhaka"
                                android:paddingLeft="40px"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:textColorHint="#4D6A6B6B" />


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>




                </RelativeLayout>

            </ScrollView>


            <RelativeLayout
                android:id="@+id/rlt_detail_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </ScrollView>

</LinearLayout>

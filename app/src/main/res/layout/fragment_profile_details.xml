<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context="">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout

            android:id="@+id/main_root"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">








            <ScrollView


                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/linear"
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- TODO: Update blank fragment layout -->
                        <LinearLayout
                            android:id="@+id/cover"



                            android:layout_width="match_parent"
                            android:layout_height="420px"
                            android:background="@drawable/cover"
                            android:orientation="vertical" />
                        <RelativeLayout

                            android:layout_marginTop="-370px"
                            android:id="@+id/rlt_header"
                            android:layout_width="match_parent"
                            android:layout_height="200px"
                            android:visibility="visible">

                            <ImageButton
                                android:id="@+id/btn_header_back"
                                android:layout_width="126px"
                                android:layout_height="135px"
                                android:layout_marginLeft="10px"
                                android:layout_marginTop="55px"
                                android:background="@color/transparent"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:paddingBottom="3px"

                                android:stateListAnimator="@null"
                                android:visibility="visible"
                                app:srcCompat="@drawable/backwhite" />





                        </RelativeLayout>
                        <de.hdodenhof.circleimageview.CircleImageView

                            android:id="@+id/img_avatar"
                            android:layout_width="256px"
                            android:layout_height="256px"
                            android:layout_gravity="center"
                            android:layout_marginTop="20px"
                            android:elevation="10px"
                            android:src="@drawable/profile_image"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="2dp" />




                        <TextView
                            android:layout_marginTop="80px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="20px"
                            android:id="@+id/card_view"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"


                            android:layout_marginLeft="70px"

                            android:layout_marginRight="70px"

                            card_view:cardBackgroundColor="#FFFFFF"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="4dp"
                            card_view:cardUseCompatPadding="true">

                            <EditText



                                android:focusable="false"
                                android:drawablePadding="25px"
                                android:id="@+id/edit_name"
                                android:layout_width="match_parent"
                                android:layout_height="160px"
                                android:background="@null"
                                android:inputType="text|textNoSuggestions"
                                android:textColor="#6A6B6B"

                                android:text="MD Sarawer Jahan Evan"
                                android:paddingLeft="40px"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:textColorHint="#4D6A6B6B" />


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="0px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="20px"
                            android:id="@+id/card_views"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"


                            android:layout_marginLeft="70px"

                            android:layout_marginRight="70px"

                            card_view:cardBackgroundColor="#FFFFFF"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="4dp"
                            card_view:cardUseCompatPadding="true">

                            <EditText



                                android:focusable="false"
                                android:drawablePadding="25px"
                                android:id="@+id/edit_gender"
                                android:layout_width="match_parent"
                                android:layout_height="160px"
                                android:background="@null"
                                android:inputType="text|textNoSuggestions"
                                android:textColor="#6A6B6B"

                                android:text="Male"
                                android:paddingLeft="40px"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:textColorHint="#4D6A6B6B" />


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="0px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Date Of Birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

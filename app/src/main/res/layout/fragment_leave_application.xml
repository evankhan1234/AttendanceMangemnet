<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout

            android:id="@+id/main_root"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">








            <ScrollView


                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/linear"
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- TODO: Update blank fragment layout -->


                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginRight="40px"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_marginTop="80px"
                                android:layout_marginLeft="70px"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="#6A6B6B"
                                android:text="Leave From"

                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="80px"
                                android:layout_marginLeft="-60px"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="#6A6B6B"
                                android:text="Leave To"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                                <EditText



                                    android:layout_marginTop="20px"
                                    android:layout_marginLeft="70px"

                                    android:drawableLeft="@drawable/calendar"
                                    android:focusable="false"
                                    android:drawablePadding="25px"
                                    android:id="@+id/edit_leave_from"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="160px"
                                    android:background="@drawable/edit_border_background"
                                    android:inputType="text|textNoSuggestions"
                                    android:textColor="#6A6B6B"
                                    android:hint="Date From"

                                    android:paddingLeft="40px"
                                    android:paddingTop="20px"
                                    android:paddingBottom="20px"
                                    android:textColorHint="#4D6A6B6B" />




                                <EditText
                                    android:drawableLeft="@drawable/calendar"
                                    android:layout_marginRight="50px"
                                    android:layout_marginTop="20px"
                                    android:layout_marginLeft="20px"
                                    android:hint="Date To"
                                    android:focusable="false"
                                    android:drawablePadding="25px"
                                    android:id="@+id/edit_leave_to"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="160px"
                                    android:background="@drawable/edit_border_background"
                                    android:inputType="text|textNoSuggestions"
                                    android:textColor="#6A6B6B"

                                    android:paddingLeft="40px"
                                    android:paddingTop="20px"
                                    android:paddingBottom="20px"
                                    android:textColorHint="#4D6A6B6B" />



                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_marginTop="80px"
                                android:layout_marginLeft="70px"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="#6A6B6B"
                                android:text="Leave Type"

                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="-40px"
                                android:layout_marginTop="80px"

                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="#6A6B6B"
                                android:text="Leave Reason"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:entries="@array/leave_lists"

                                android:background="@drawable/test"
                                android:layout_marginTop="20px"
                                android:layout_marginLeft="60px"

                                android:id="@+id/spinnerUnit"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="160px"/>

                            <Spinner
                                android:entries="@array/reason_lists"
                                android:background="@drawable/test"
                                android:layout_marginTop="20px"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="50px"
                                android:id="@+id/spinnerUnist"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="160px"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="80px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Reporting Senior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:entries="@array/reporting_lists"
                            android:background="@drawable/test"
                            android:layout_marginTop="20px"
                            android:layout_marginLeft="60px"
                            android:layout_marginRight="50px"
                            android:id="@+id/spinnerUdnist"
                            android:layout_width="match_parent"
                            android:layout_height="160px"/>
                        <TextView
                            android:layout_marginTop="80px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Backup personal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:entries="@array/select_lists"
                            android:background="@drawable/test"
                            android:layout_marginTop="20px"
                            android:layout_marginLeft="60px"
                            android:layout_marginRight="50px"
                            android:id="@+id/spinneroUdnist"
                            android:layout_width="match_parent"
                            android:layout_height="160px"/>
                        <TextView
                            android:layout_marginTop="80px"
                            android:layout_marginLeft="70px"
                            android:tag="45"
                            android:textSize="45px"
                            android:textColor="#6A6B6B"
                            android:text="Note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>




                            <EditText


                                android:layout_marginLeft="60px"
                                android:layout_marginRight="50px"
                                android:layout_marginTop="20px"
                                android:gravity="top"

                                android:drawablePadding="25px"
                                android:id="@+id/edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="280px"
                                android:background="@drawable/edit_border_background"
                                android:inputType="text|textMultiLine"
                                android:textColor="#6A6B6B"

                                android:hint="Please Take a Note"
                                android:paddingLeft="40px"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:textColorHint="#4D6A6B6B" />




                        <Button
                            android:textColorHint="@color/white"
                            android:layout_marginBottom="30px"
                            android:layout_marginLeft="70px"
                            android:layout_marginRight="70px"
                            android:layout_marginTop="30px"
                            android:hint="Send"
                            android:background="@drawable/capsule_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>




                </RelativeLayout>

            </ScrollView>


            <RelativeLayout
                android:id="@+id/rlt_detail_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </ScrollView>

</LinearLayout>

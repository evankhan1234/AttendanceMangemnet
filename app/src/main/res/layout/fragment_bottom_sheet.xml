<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0px"
    android:clipToPadding="false"
    android:elevation="50px">



        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:layout_marginRight="5px"


            android:background="@drawable/btn_background"
            android:orientation="vertical"

            android:visibility="visible">
            <ImageView
                android:layout_gravity="right"
                android:layout_marginRight="40px"

                android:layout_marginTop="50px"

                android:id="@+id/btn_close_drawer"
                android:layout_width="67px"
                android:layout_height="67px"
                android:layout_marginLeft="24px"

                android:src="@drawable/close_icon"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="450px"
                android:layout_height="450px"
                android:layout_gravity="center_horizontal"


                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:src="@drawable/backwhite"
                app:civ_border_color="#358ED3"
                app:civ_border_width="3dp"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:tag="40"
                        android:text="Preet Kamal Preet  Kamal"
                        android:textColor="#6A6B6B"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/text_office_text"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"

                        android:tag="40"
                        android:text="(1166)"

                        android:textColor="#edaa0e"
                        android:textSize="40px" />
                </LinearLayout>


                <TextView
                    android:id="@+id/text_phone_number"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"


                    android:tag="40"
                    android:text="+6601677182084"
                    android:textColor="#6A6B6B"
                    android:textSize="40px" />

                <TextView

                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"


                    android:tag="40"
                    android:text="evankhan@gmail.com"
                    android:textColor="#6A6B6B"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/text_blood_group"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"


                    android:tag="40"
                    android:text="B+"
                    android:textColor="#6A6B6B"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/text_emergency_contact_number"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"


                    android:tag="40"
                    android:text=""
                    android:textColor="#6A6B6B"
                    android:textSize="40px" />
                <TextView

                    android:id="@+id/text_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:tag="40"
                    android:text="Executive"
                    android:textSize="40px" />



                <TextView
                    android:id="@+id/text_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:tag="40"
                    android:text="Buisness Development "
                    android:textSize="40px" />



                <TextView
                    android:id="@+id/text_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="40"
                    android:text="DCO"
                    android:textSize="40px" />
            </LinearLayout>


            <TextView
                android:id="@+id/text_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:gravity="end"
                android:letterSpacing="0.1"
                android:tag="40"
                android:textColor="#806A6B6B"
                android:textSize="40px"
                android:visibility="gone" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:layout_marginBottom="10px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:background="@drawable/white_circle_drawable">

                    <ImageView

                        android:id="@+id/img_phone"
                        android:layout_width="70px"

                        android:layout_height="70px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25px"
                        android:src="@drawable/phone_call"


                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/white_circle_drawable">

                    <ImageView

                        android:id="@+id/img_sms"
                        android:layout_width="70px"

                        android:layout_height="70px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25px"
                        android:src="@drawable/sms"


                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/white_circle_drawable">

                    <ImageView

                        android:id="@+id/img_email"
                        android:layout_width="wrap_content"

                        android:layout_height="70px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/envelope"


                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/white_circle_drawable">

                    <ImageView

                        android:id="@+id/img_add_contact"
                        android:layout_width="wrap_content"

                        android:layout_height="70px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/add_user"


                        />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="80px"/>
        </LinearLayout>


</RelativeLayout>
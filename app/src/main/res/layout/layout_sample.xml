<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView


        android:id="@+id/rlt_fragment_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="5dp"

                    card_view:cardElevation="1dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:layout_marginBottom="30px"
                        android:background="@drawable/btn_background"
                        android:orientation="vertical"
                        android:padding="50px"
                        android:visibility="visible">


                        <RelativeLayout

                            android:id="@+id/rlt_fragment_rootxs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white">

                            <LinearLayout
                                android:visibility="visible"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_marginTop="40px"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/img_avatar"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"

                                    android:elevation="10px"
                                    android:layout_width="180px"
                                    android:layout_height="180px"
                                    android:src="@drawable/backwhite"



                                    />

                                <LinearLayout
                                    android:layout_marginTop="25px"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_name"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="40px"

                                        android:tag="40"
                                        android:text="Evan Khan"
                                        android:textColor="#6A6B6B"
                                        android:textSize="40px" />

                                    <TextView
                                        android:id="@+id/text_office_text"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="40px"

                                        android:tag="40"
                                        android:text="+8801677182084"
                                        android:textColor="#6A6B6B"
                                        android:textSize="40px" />


                                </LinearLayout>



                            </LinearLayout>
                            <ImageView
                                android:id="@+id/img_next"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="80px"

                                android:gravity="right"
                                android:layout_gravity="right"
                                android:layout_height="70px"
                                android:src="@drawable/right_arrow"
                                android:layout_width="70px"/>
                        </RelativeLayout>




                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:tag="45"
                android:textSize="45px"
                android:layout_marginTop="20px"
                android:layout_marginLeft="30px"
                android:id="@+id/user"
                android:layout_below="@+id/linear"
                android:text="Your Activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="25px"
                android:background="@color/colorPrimary"

                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_below="@+id/user"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:id="@+id/layout_header"

                xmlns:android="http://schemas.android.com/apk/res/android">

                <TextView
                    android:textColor="@color/white"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:tag="40"
                    android:textSize="40px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Dates"
                    android:gravity="center|center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:id="@+id/text_customer_name" />
                <TextView
                    android:textColor="@color/white"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:tag="40"
                    android:textSize="40px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Punch In Location"
                    android:gravity="center|center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:id="@+id/text_date" />

                <TextView
                    android:textColor="@color/white"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:tag="40"
                    android:textSize="40px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Punch In Time"
                    android:gravity="center|center_vertical"
                    android:layout_weight="1"

                    android:background="@drawable/cell_shape"
                    android:id="@+id/text_amounst" />
                <TextView
                    android:textColor="@color/white"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:tag="40"
                    android:textSize="40px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Punch Out Location"
                    android:gravity="center|center_vertical"
                    android:layout_weight="1"

                    android:background="@drawable/cell_shape"
                    android:id="@+id/text_amount" />

                <TextView
                    android:textColor="@color/white"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:tag="40"
                    android:textSize="40px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Punch Out Time"
                    android:gravity="center|center_vertical"
                    android:layout_weight="1"

                    android:background="@drawable/cell_shape"
                    android:id="@+id/text_amounsvt" />
                <TextView
                    android:textColor="@color/white"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:tag="40"
                    android:textSize="40px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Duration"
                    android:gravity="center|center_vertical"
                    android:layout_weight="1"

                    android:background="@drawable/cell_shape"
                    android:id="@+id/text_amouvnt" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView

                android:layout_below="@+id/layout_header"
                tools:listitem="@layout/item_punch_in_list"


                android:nestedScrollingEnabled="false"
                android:id="@+id/rcl_punch_in_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="10px"

                android:layout_marginRight="10px"



                >

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rlt_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
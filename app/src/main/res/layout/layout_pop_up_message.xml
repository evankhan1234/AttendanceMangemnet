<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="0px">

    <LinearLayout

        android:background="@drawable/btn_background"
        android:layout_width="match_parent"
        android:layout_height="305px"


        android:layout_centerInParent="true"
        android:layout_marginLeft="183px"
        android:layout_marginRight="182px"


        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="50px">


        <TextView
            android:textAlignment="center"
            android:letterSpacing="0.01"
            android:id="@+id/text_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tag="45"

            android:text="Are you want to logout....?"
            android:textColor="#6A6B6B"
            android:textSize="45px" />
        <LinearLayout
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="20px"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:tag="45"
                android:textSize="45px"
                android:layout_weight="1"
                android:id="@+id/btn_no"
                android:background="@drawable/btn_more_background"
                android:hint="No"
                android:textColorHint="#fff"
                android:layout_width="0dp"
                android:layout_height="100px" />
            <Button
                android:layout_marginLeft="20px"
                android:tag="45"
                android:textSize="45px"
                android:layout_weight="1"
                android:id="@+id/btn_yes"
                android:background="@drawable/btn_more_background"
                android:hint="Yes"
                android:textColorHint="#fff"
                android:layout_width="0dp"
                android:layout_height="100px" />
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
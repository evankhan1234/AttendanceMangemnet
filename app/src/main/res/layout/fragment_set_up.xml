<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30px"

        android:id="@+id/card_view"
        android:layout_width="match_parent"

        android:layout_height="match_parent"


        android:layout_marginLeft="20px"

        android:layout_marginRight="20px"

        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <EditText



            android:drawablePadding="25px"
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:background="@null"
            android:inputType="text|textNoSuggestions"
            android:drawableLeft="@drawable/icon_search"
            android:hint="Please enter a search word"
            android:paddingLeft="40px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:textColorHint="#4D6A6B6B" />


    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView

        android:layout_marginTop="25px"

        android:nestedScrollingEnabled="false"
        android:id="@+id/rcl_this_unit_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50px"

        android:layout_marginRight="50px"
        android:layout_marginBottom="0px"


        >

    </androidx.recyclerview.widget.RecyclerView>

    <HorizontalScrollView
        android:visibility="gone"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:id="@+id/scr_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:background="@drawable/round_button_blue"
                android:id="@+id/btn_1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"

                android:text="DCO"

                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:layout_marginLeft="20px"
                android:background="@drawable/round_button_blue"
                android:id="@+id/btn_finishs"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"

                android:text="DFB"

                android:textColor="@color/white"
                android:visibility="visible" />
            <Button
                android:layout_marginLeft="20px"
                android:background="@drawable/round_button_blue"
                android:id="@+id/btn_finishsSs"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"

                android:text="DBD"

                android:textColor="@color/white"
                android:visibility="visible" />
            <Button
                android:layout_marginLeft="20px"
                android:background="@drawable/round_button_blue"
                android:id="@+id/btn_finishsssd"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:minWidth="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"
                android:text="MIS"

                android:textColor="@color/white"
                android:visibility="visible" />
        </LinearLayout>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView

        android:layout_marginTop="25px"

        android:nestedScrollingEnabled="false"
        android:id="@+id/rcl_this_department_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50px"

        android:layout_marginRight="50px"
        android:layout_marginBottom="0px"


        >

    </androidx.recyclerview.widget.RecyclerView>

    <HorizontalScrollView
        android:visibility="gone"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:id="@+id/scr_categorys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_marginLeft="20px"
                android:background="@drawable/round_button_blue"
                android:id="@+id/btnd_2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:minWidth="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"

                android:text="Import"

                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:layout_marginLeft="20px"
                android:background="@drawable/round_button_blue"
                android:id="@+id/btn_2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:minWidth="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"

                android:text="SDL"

                android:textColor="@color/white"
                android:visibility="visible" />
            <Button
                android:layout_marginLeft="20px"
                android:background="@drawable/round_button_blue"
                android:id="@+id/btn_finishsss"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:minWidth="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"
                android:text="MIS"

                android:textColor="@color/white"
                android:visibility="visible" />
            <Button
                android:layout_marginLeft="20px"
                android:background="@drawable/round_button_blue"
                android:id="@+id/btn_finishsdss"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:minWidth="300px"
                android:layout_height="130px"
                android:layout_gravity="end|center"
                android:text="MIS"

                android:textColor="@color/white"
                android:visibility="visible" />
        </LinearLayout>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView

        android:layout_marginTop="25px"

        android:nestedScrollingEnabled="false"
        android:id="@+id/rcl_this_place_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="50px"

        android:layout_marginRight="50px"
        android:layout_marginBottom="0px"


        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rlt_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <ProgressBar

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:background="@android:color/transparent" />
</RelativeLayout>